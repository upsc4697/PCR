<!DOCTYPE html>
<html>
<head>
  <title>Product Entry Form</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 15px;
    }
    input, textarea, button {
      display: block;
      width: 100%;
      margin-bottom: 10px;
      padding: 8px;
      font-size: 16px;
    }
    button {
      background-color: #4CAF50;
      color: white;
      border: none;
    }
  </style>
</head>
<body>
  <h2>Enter Product Details</h2>

  <form id="productForm">
    <input type="text" name="productName" placeholder="Product Name" required />
    <input type="text" name="productCode" placeholder="Product Code" required />
    <textarea name="items" placeholder="Items (comma separated)" required></textarea>
    <textarea name="weights" placeholder="Weights (comma separated)" required></textarea>
    <input type="text" name="pantoneCode" placeholder="Pantone Code" />
    <input type="text" name="ralCode" placeholder="RAL Code" />
    <input type="text" name="totalWeight" placeholder="Total Weight" />
    <input type="text" name="application" placeholder="Application" />
    <textarea name="additionalInfo" placeholder="Additional Information"></textarea>

    <button type="submit">Submit</button>
  </form>

  <p id="response"></p>

  <script>
    document.getElementById("productForm").addEventListener("submit", function (e) {
      e.preventDefault();

      const form = e.target;
      const data = {
        productName: form.productName.value,
        productCode: form.productCode.value,
        items: form.items.value.split(",").map(item => item.trim()),
        weights: form.weights.value.split(",").map(weight => weight.trim()),
        pantoneCode: form.pantoneCode.value,
        ralCode: form.ralCode.value,
        totalWeight: form.totalWeight.value,
        application: form.application.value,
        additionalInfo: form.additionalInfo.value
      };

      fetch("https://script.google.com/macros/s/AKfycbxTbnfqDrmq_Nee7TjH2bNIVH0TiOsE79D1irRmAtdCOaYfsPOx3wg24vOo0EG2Ud5bFg/exec", {
        method: "POST",
        mode: "no-cors", // Remove this line if you're handling response
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(data)
      })
      .then(() => {
        document.getElementById("response").textContent = "Submitted successfully!";
        form.reset();
      })
      .catch(() => {
        document.getElementById("response").textContent = "Error while submitting!";
      });
    });
  </script>
</body>
</html>
